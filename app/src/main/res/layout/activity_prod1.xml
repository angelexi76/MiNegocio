<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degraded1"
    android:orientation="vertical"
    tools:context=".prod1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:backgroundTint="@null"
        android:background="@drawable/degraded_2"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardbackgroundTint="null"
        android:orientation="vertical"
        android:padding="15dp"
        android:outlineAmbientShadowColor="@color/white"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardBackgroundColor="@color/rosa"
        app:cardCornerRadius="30dp"
        app:contentPadding="4dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/txv_product1"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:paddingTop="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/degraded1"
            android:text="@string/txv_description4"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"
            android:src="@drawable/cake1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/cake1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/cake1" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="380dp"
            android:text="@string/txv_precio1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:background="@drawable/degraded1"
            android:layout_marginTop="500dp">


            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:paddingBottom="12dp"
                android:text="-1"
                android:textSize="25dp"
                app:RounderCorner="10dp"
               />
            <TextView

                android:id="@+id/textView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingStart="12dp"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:paddingBottom="12dp"
                android:text="+1"
                android:textSize="25dp"
                app:RounderCorner="10dp"
                />





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

