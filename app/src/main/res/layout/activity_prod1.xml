<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degraded1"
    android:orientation="vertical"
    tools:context=".Prod1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_barra"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="@string/txv_text_1"
        app:titleTextColor="@color/white"
        android:elevation="3dp"
        android:background="@drawable/degraded_2"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:backgroundTint="@null" />




    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:onClick="card"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/black"
        android:padding="15dp"
        app:backgroundTint="@null"
        app:cardBackgroundColor="#B4FFC0CB"
        app:cardCornerRadius="20dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/txv_product1"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@color/rosa"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:text="@string/txv_description1"
            android:textColor="@color/material_500"
            android:textSize="25sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"
            android:src="@drawable/favorito2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/cake2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/cake1" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="550dp"
            android:text="@string/txv_price1"
            android:textColor="@color/material_500"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_gravity="end"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/boton"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnrest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="3dp"
                android:backgroundTint="@color/material_500"
                android:background="@drawable/boton"
                android:textColor="@color/white"
                android:onClick="subtract1"
                android:padding="1dp"
                android:text="-"
                android:textSize="25dp" />



            <TextView

                android:id="@+id/text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/boton"
                android:gravity="center"
                android:padding="1dp"
                android:text="0"
                android:onClick="textcontador"
                android:textColor="@color/black"textcontador
                android:textSize="25sp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/btnsum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/material_500"
                android:background="@drawable/boton"
                android:padding="1dp"
                android:onClick="add1"
                android:textColor="@color/white"
                android:text="+"
                android:textSize="25dp" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>

