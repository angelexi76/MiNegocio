<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
           android:layout_width="match_parent"
           android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/degraded1"
            android:orientation="vertical"
            tools:context=".Prod1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_barra"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:titleTextColor="@color/black"
        android:elevation="3dp"
        android:background="@drawable/degraded_2"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/text_1"
        app:backgroundTint="@null" />


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="844dp"
                android:layout_margin="9dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/black"
                android:padding="15dp"
                app:backgroundTint="@null"
                app:cardBackgroundColor="#B4FFC0CB"
                app:cardCornerRadius="20dp"
                app:cardElevation="@dimen/cardview_compat_inset_shadow">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_product1"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="210dp"
                        android:paddingStart="9dp"
                        android:paddingTop="9dp"
                        android:text="@string/text_description1"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="italic" />
                </LinearLayout>


                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="150dp"
                    android:src="@drawable/favorito2" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/cake2" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/cake1" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="550dp"
                    android:text="@string/text_price1"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="650dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_rest"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/boton"
                        android:backgroundTint="@color/black"
                        android:elevation="3dp"
                        android:onClick="subtract1"
                        android:padding="1dp"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="25dp" />


                    <TextView

                        android:id="@+id/textBox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/boton"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btn_sum"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/boton"
                        android:backgroundTint="@color/black"
                        android:onClick="add1"
                        android:padding="1dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="25dp" />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_buy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/white"
                    android:onClick="buttonBuy"
                    android:text="@string/text_buy"
                    android:textSize="25dp" />


            </androidx.cardview.widget.CardView>



</LinearLayout>

</ScrollView>
