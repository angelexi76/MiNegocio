<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProdActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/degraded_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/txv_text_1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/txv_text_2"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="fruit1"
        app:cardCornerRadius="10dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/degraded_2"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/rosa">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:src="@drawable/cake1" />

        <TextView

            android:id="@+id/description4"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/degraded1"
            android:paddingStart="9dp"
            android:paddingTop="2dp"
            android:paddingBottom="19dp"
            android:text="@string/txv_description1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:onClick="fruit1"/>

        <TextView
            android:id="@+id/frut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="fruit1"
            android:background="@drawable/degraded_2"
            android:text="@string/txv_product1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"  />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:paddingTop="1dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:background="@drawable/degraded_2"
        app:cardBackgroundColor="@color/rosa">

        <TextView


            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/degraded1"
            android:paddingStart="9dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/txv_description2"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:gravity="center"
            android:onClick="theme"
            android:text="@string/txv_product2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:src="@drawable/theme" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:paddingTop="1dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/degraded_2"
        app:cardBackgroundColor="@color/rosa">

        <TextView

            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="36dp"
            android:background="@drawable/degraded1"
            android:paddingStart="9dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/txv_description3"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:text="@string/txv_product3"
            android:onClick="cake"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cake_favorito" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/degraded_2"
        android:paddingTop="1dp"
        android:paddingBottom="3dp"
        app:cardBackgroundColor="@color/rosa">

        <TextView

            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/degraded1"
            android:paddingStart="9dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/txv_description4"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:gravity="center"
            android:onClick="cup"
            android:text="@string/txv_product4"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cupcakes" />

    </androidx.cardview.widget.CardView>


</LinearLayout>