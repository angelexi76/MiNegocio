<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prod3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degraded1"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/white"
            android:elevation="3dp"
            android:background="@drawable/degraded_2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/txv_text_1"
            app:backgroundTint="@null" />




        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:cardBackgroundColor="@color/rosi"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow"
            app:backgroundTint="@null">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txv_product3"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:background="@color/rosa"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:text="@string/txv_description3"
                android:textColor="@color/material_500"
                android:textSize="19sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="110dp"
                android:src="@drawable/cup3" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/caja1" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/caja2" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="555dp"
                android:text="@string/txv_price1"
                android:textColor="@color/material_500"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="600dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/white"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/boton"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/material_500"
                    android:onClick="sum3"
                    android:padding="1dp"
                    android:text="+"
                    android:textSize="25dp" />


                <TextView

                    android:id="@+id/textView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:padding="1dp"
                    android:gravity="center"
                    android:onClick="text3"
                    android:background="@drawable/boton"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/material_500"
                    android:padding="1dp"
                    android:onClick="rest3"
                    android:textColor="@color/white"
                    android:text="-"
                    android:textSize="25dp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnBuy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="6dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/material_500"
                android:onClick="buttonBuy"
                android:text="@string/buy"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


