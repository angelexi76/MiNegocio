<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/degraded1"
            tools:context=".ProdActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/degraded_2"
            android:elevation="3dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:backgroundTint="@null"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/text_1"
            app:titleTextColor="@color/black" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:paddingTop="1dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@drawable/degraded_2"
            app:cardBackgroundColor="@color/black">

            <TextView
                android:id="@+id/fruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/degraded_2"
                android:gravity="center"
                android:onClick="fruit1"
                android:text="@string/text_product1"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="500dp"
                android:layout_height="222dp"
                android:layout_gravity="left"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/text_description_fruit"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            </ScrollView>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="370dp"
                android:layout_height="190dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="10dp"
                android:elevation="3dp"
                android:src="@drawable/cake1" />

            <TextView
                android:id="@+id/txv_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="fruit1"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/black"
                android:textSize="35dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:paddingTop="1dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@drawable/degraded_2"
            app:cardBackgroundColor="@color/black">


            <TextView
                android:id="@+id/them"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/degraded_2"
                android:gravity="center"
                android:onClick="theme"
                android:text="@string/text_product2"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:paddingStart="9dp"
                android:paddingBottom="19dp"
                android:text="@string/text_description_theme"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            </ScrollView>


            <ImageView
                android:id="@+id/image2"
                android:layout_width="370dp"
                android:layout_height="170dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="10dp"
                android:elevation="3dp"
                android:src="@drawable/tematico3" />

            <TextView
                android:id="@+id/txv_more1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="theme"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/black"
                android:textSize="35dp"
                />



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:background="@drawable/degraded_2"
                        app:cardBackgroundColor="@color/black">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView

                android:layout_width="500dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:paddingStart="9dp"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/text_description_theme"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            </ScrollView>

            <TextView
            android:id="@+id/favor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:text="@string/text_product3"
            android:onClick="cake"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="10dp"
                android:elevation="3dp"
                android:src="@drawable/cake_favorito" />
            <TextView
                android:id="@+id/txv_more2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="cake"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/black"
                android:textSize="35dp"
                />

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/degraded_2"
        android:paddingTop="1dp"
        android:paddingBottom="3dp"
        app:cardBackgroundColor="@color/black">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="226dp">

            <TextView

                android:layout_width="500dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:layout_marginTop="69dp"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:paddingStart="9dp"
                android:text="@string/text_description_cup"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

        </ScrollView>

        <TextView
            android:id="@+id/cup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:gravity="center"
            android:onClick="cup"
            android:text="@string/text_product4"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="20dp"
            android:elevation="3dp"
            android:src="@drawable/cupcakes" />
        <TextView
            android:id="@+id/txv_more3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="cup"
            android:padding="2dp"
            android:paddingBottom="6dp"
            android:text=">>>"
            android:textColor="@color/black"
            android:textSize="30dp"
            />
        />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </ScrollView>
