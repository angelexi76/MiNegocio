<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degraded1"
        android:orientation="vertical"
        tools:context=".Prod1Activity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/white"
            android:elevation="3dp"
            android:background="@drawable/degraded_2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/text_1"
            app:backgroundTint="@null" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="804dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:onClick="card"
            android:orientation="vertical"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="15dp"
            app:backgroundTint="@null"
            app:cardBackgroundColor="#B4FFC0CB"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:text="@string/text_product2"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="250dp"
                        android:paddingStart="9dp"
                        android:paddingTop="9dp"
                        android:text="@string/text_description2"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="italic" />
                </LinearLayout>

            </ScrollView>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="150dp"
                android:src="@drawable/theme" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/tematico3" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/theme2" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="500dp"
                android:paddingStart="15dp"
                android:text="@string/text_price1"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginTop="600dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/rosa"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rest"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/black"
                    android:elevation="3dp"
                    android:onClick="subtract1"
                    android:padding="1dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="30dp" />


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="100dp"
                    android:background="@color/rosa"
                    android:onClick="buttonBuy"
                    android:padding="2dp"
                    android:src="@drawable/icon_pastel" />


                <Button
                    android:id="@+id/btn_sum"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="9dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/black"
                    android:onClick="add1"
                    android:padding="1dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30dp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnBuy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="6dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/white"
                android:onClick="buttonBuy"
                android:text="@string/text_buy"
                android:textSize="30dp" />


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>
