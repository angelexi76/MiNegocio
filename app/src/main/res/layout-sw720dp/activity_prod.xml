<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/degraded1"
            tools:context=".ProdActivity">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_barra"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:titleTextColor="@color/black"
                android:elevation="3dp"
                android:background="@drawable/degraded_2"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/text_1"
                app:backgroundTint="@null" />




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:paddingTop="3dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/degraded_2"
            app:cardBackgroundColor="@color/black">

            <TextView
                android:id="@+id/fruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/degraded_2"
                android:gravity="center"
                android:onClick="fruit1"
                android:text="@string/text_product1"
                android:textColor="@color/white"
                android:textSize="80sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="550dp"
                    android:layout_height="260dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="19dp"
                    android:text="@string/text_description_fruit"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </ScrollView>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="20dp"
                android:elevation="3dp"
                android:src="@drawable/cake1" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:onClick="fruit1"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/material_500"
                android:textSize="40dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:paddingTop="1dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/degraded_2"
            app:cardBackgroundColor="@color/black">


            <TextView
                android:id="@+id/them"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/degraded_2"
                android:gravity="center"
                android:onClick="theme"
                android:text="@string/text_product2"
                android:textColor="@color/white"
                android:textSize="80sp"
                android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="550dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:background="@color/white"
                android:layout_marginTop="115dp"
                android:layout_marginBottom="9dp"
                android:paddingStart="9dp"
                android:paddingBottom="19dp"
                android:text="@string/text_description_theme"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold" />
            </ScrollView>


            <ImageView
                android:id="@+id/image2"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="10dp"
                android:elevation="3dp"
                android:src="@drawable/tematico3" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:onClick="theme"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/material_500"
                android:textSize="40dp"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/degraded_2"
                        app:cardBackgroundColor="@color/black">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView

                android:layout_width="550dp"
                android:layout_height="260dp"
                android:layout_gravity="left"
                android:layout_marginTop="115dp"
                android:layout_marginBottom="9dp"
                android:background="@color/white"
                android:paddingStart="9dp"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/text_description_favororite"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold" />

            </ScrollView>

            <TextView
            android:id="@+id/favor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:text="@string/text_product3"
            android:onClick="cake"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:elevation="3dp"
                android:src="@drawable/cake_favorito" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:onClick="cake"
                android:padding="2dp"
                android:paddingBottom="6dp"
                android:text=">>>"
                android:textColor="@color/material_500"
                android:textSize="40dp"
                />

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/degraded_2"
        android:paddingTop="1dp"
        android:paddingBottom="3dp"
        app:cardBackgroundColor="@color/black">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView

            android:layout_width="550dp"
            android:layout_height="270dp"
            android:layout_gravity="left"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="9dp"
            android:background="@color/white"
            android:paddingStart="9dp"
            android:paddingTop="20dp"
            android:text="@string/text_description_cup"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        </ScrollView>

        <TextView
            android:id="@+id/cup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/degraded_2"
            android:gravity="center"
            android:onClick="cup"
            android:text="@string/text_product4"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="9dp"
            android:elevation="3dp"
            android:src="@drawable/cupcakes" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:onClick="cup"
            android:padding="2dp"
            android:paddingBottom="6dp"
            android:text=">>>"
            android:textColor="@color/material_500"
            android:textSize="40dp"
            />


        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </ScrollView>
