<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prod4Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degraded1"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/black"
            android:elevation="3dp"
            android:background="@drawable/degraded_2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/text_1"
            app:backgroundTint="@null" />




    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:cardBackgroundColor="@color/rosi"
        app:cardCornerRadius="20dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:backgroundTint="@null">



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_product4"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:text="@string/text_description4"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="190dp"
            android:src="@drawable/cupc3" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/cupc_1" />


        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/cupc2" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="800dp"
            android:text="@string/text_price1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="900dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/boton"
            android:backgroundTint="@color/rosa"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:padding="1dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/black"
                android:text="+"
                android:textSize="25dp"
                />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="90dp"
                android:background="@color/rosa"
                android:onClick="buttonBuy"
                android:padding="2dp"
                android:src="@drawable/icon_pastel" />

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@drawable/boton"
                android:backgroundTint="@color/black"
                android:padding="1dp"
                android:text="-"
                android:textSize="25dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnBuy4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="6dp"
            android:background="@drawable/boton"
            android:backgroundTint="@color/white"
            android:onClick="buttonBuy"
            android:text="@string/text_buy"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>