<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/degraded1"
    tools:context=".Prod2Activity">



   <androidx.appcompat.widget.Toolbar
       android:id="@+id/my_barra"
       android:layout_width="match_parent"
       android:layout_height="?actionBarSize"
       app:titleTextColor="@color/white"
       android:elevation="3dp"
       android:background="@drawable/degraded_2"
       android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
       app:title="@string/text_1"
       app:backgroundTint="@null" />


   <androidx.cardview.widget.CardView
       android:id="@+id/card2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:orientation="vertical"
       android:padding="15dp"
       app:backgroundTint="@null"
       app:cardBackgroundColor="@color/rosi"
       app:cardCornerRadius="20dp"
       app:cardElevation="@dimen/cardview_compat_inset_shadow">


      <TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:text="@string/text_product2"
          android:textColor="@color/white"
          android:textSize="90sp"
          android:textStyle="bold" />

      <TextView

          android:layout_width="match_parent"
          android:layout_height="272dp"
          android:layout_gravity="center"
          android:layout_marginStart="10dp"
          android:layout_marginTop="250dp"
          android:layout_marginEnd="10dp"
          android:paddingStart="6dp"
          android:paddingTop="6dp"
          android:text="@string/text_description2"
          android:textColor="@color/black"
          android:textSize="50sp"
          android:textStyle="italic" />

      <ImageView
          android:layout_width="250dp"
          android:layout_height="300dp"
          android:layout_gravity="center"
          android:layout_marginBottom="100dp"
          android:src="@drawable/theme2" />

      <ImageView
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_marginStart="20dp"
          android:layout_marginTop="180dp"
          android:src="@drawable/tematico3" />

      <ImageView
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_gravity="end"
          android:layout_marginTop="180dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/porque_tematico" />


      <TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="1250dp"
          android:text="@string/text_price1"
          android:textColor="@color/material_500"
          android:textSize="40sp"
          android:textStyle="bold" />


      <LinearLayout
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginTop="1300dp"
          android:layout_marginEnd="16dp"
          android:background="@drawable/boton"
          android:backgroundTint="@color/white"
          android:orientation="horizontal">

         <Button
             android:id="@+id/btn_rest"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/boton"
             android:backgroundTint="@color/material_500"
             android:elevation="3dp"
             android:onClick="subtract1"
             android:padding="1dp"
             android:text="-"
             android:textColor="@color/white"
             android:textSize="35dp" />


         <TextView

             android:id="@+id/textBox"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:background="@drawable/boton"
             android:gravity="center"
             android:onClick="textcontador"
             android:padding="1dp"
             android:text="0"
             android:textColor="@color/black"
             android:textSize="35sp"
             android:textStyle="bold" />


         <Button
             android:id="@+id/btn_sum"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:background="@drawable/boton"
             android:backgroundTint="@color/material_500"
             android:onClick="add1"
             android:padding="1dp"
             android:text="+"
             android:textColor="@color/white"
             android:textSize="35dp" />


      </LinearLayout>

      <Button
          android:id="@+id/btnBuy2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:layout_margin="6dp"
          android:layout_marginBottom="30dp"
          android:background="@drawable/boton"
          android:backgroundTint="@color/material_500"
          android:onClick="buttonBuy"
          android:text="@string/text_buy"
          android:textSize="45dp" />

   </androidx.cardview.widget.CardView>

</LinearLayout>




