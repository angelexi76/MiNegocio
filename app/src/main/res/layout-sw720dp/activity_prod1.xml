<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
           android:layout_width="match_parent"
           android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/degraded1"
            android:orientation="vertical"
            tools:context=".Prod1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_barra"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:titleTextColor="@color/black"
        android:elevation="3dp"
        android:background="@drawable/degraded_2"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/text_1"
        app:backgroundTint="@null" />


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="1604dp"
                android:layout_margin="9dp"
                android:layout_marginTop="20dp"
                android:onClick="card"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/black"
                android:padding="15dp"
                app:backgroundTint="@null"
                app:cardBackgroundColor="#B4FFC0CB"
                app:cardCornerRadius="20dp"
                app:cardElevation="@dimen/cardview_compat_inset_shadow">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_product1"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="90sp"
                    android:textStyle="bold" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="300dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="9dp"
                    android:paddingTop="6dp"
                    android:text="@string/text_description1"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="italic" />


                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="100dp"
                    android:src="@drawable/favorito2" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="190dp"
                    android:src="@drawable/cake2" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="190dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/cake1" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="1300dp"
                    android:text="@string/text_price1"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="1350dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/rosa"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_rest"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/boton"
                        android:backgroundTint="@color/black"
                        android:elevation="3dp"
                        android:onClick="subtract1"
                        android:padding="1dp"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="35dp" />


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="110dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/rosa"
                        android:onClick="buttonBuy"
                        android:padding="2dp"
                        android:src="@drawable/icon_pastel" />


                    <Button
                        android:id="@+id/btn_sum"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/boton"
                        android:backgroundTint="@color/black"
                        android:onClick="add1"
                        android:padding="1dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="35dp" />


                </LinearLayout>

                <Button
                    android:id="@+id/btnBuy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/white"
                    android:onClick="buttonBuy"
                    android:text="@string/text_buy"
                    android:textSize="45dp" />


            </androidx.cardview.widget.CardView>



</LinearLayout>

</ScrollView>
