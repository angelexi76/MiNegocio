<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degraded1"
    tools:context=".BuyFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="10dp">


      <TextView
          android:id="@+id/text_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="@string/text_1"
          android:layout_marginTop="50dp"
          android:textColor="@color/black"
          android:textSize="70sp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/image1"
          android:layout_width="match_parent"
          android:layout_height="350dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="10dp"
          android:src="@drawable/icono" />

      <TextView
          android:id="@+id/text_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="@string/text_2"
          android:layout_marginBottom="10dp"
          android:textColor="@color/black"
          android:textSize="55sp" />


      <androidx.cardview.widget.CardView
          android:id="@+id/buy"
          android:layout_width="match_parent"
          android:layout_height="1006dp"
          android:layout_margin="16dp"
          android:layout_marginTop="30dp"
          android:onClick="shop"
          android:orientation="horizontal"
          android:padding="9dp">

          <TextView

              android:id="@+id/order"
              android:layout_width="match_parent"
              android:layout_height="993dp"
             android:layout_marginStart="360dp"
              android:layout_marginTop="40dp"
              android:onClick="what"
              android:text="@string/text_order"
              android:textColor="@color/black"
              android:textSize="40sp"
              android:textStyle="bold" />

          <TextView

              android:id="@+id/data1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="right"
              android:layout_marginTop="190dp"
              android:onClick="what"
              android:paddingStart="15dp"
              android:paddingTop="2dp"
              android:text="@string/text_sub_total"
              android:textColor="@color/black"
              android:textSize="40sp"
              android:textStyle="bold" />

          <TextView

              android:id="@+id/data2"
              android:layout_width="match_parent"
              android:layout_height="169dp"
              android:layout_gravity="right"
              android:layout_marginTop="300dp"
              android:onClick="whats"
              android:paddingStart="15dp"
              android:paddingTop="2dp"
              android:text="@string/text_cost"
              android:textColor="@color/black"
              android:textSize="40sp"
              android:textStyle="bold" />

          <TextView

              android:id="@+id/data3"
              android:layout_width="match_parent"
              android:layout_height="368dp"
              android:layout_gravity="right"
              android:layout_marginTop="450dp"
              android:onClick="what1"
              android:paddingStart="9dp"
              android:paddingTop="2dp"
              android:text="@string/text_total"
              android:textColor="@color/black"
              android:textSize="40sp"
              android:textStyle="bold" />







      </androidx.cardview.widget.CardView>



  </LinearLayout>
</LinearLayout>
   </ScrollView>