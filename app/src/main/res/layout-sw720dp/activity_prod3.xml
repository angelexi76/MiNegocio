<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prod3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degraded1"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/black"
            android:elevation="3dp"
            android:background="@drawable/degraded_2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/text_1"
            app:backgroundTint="@null" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="1635dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:backgroundTint="@null"
            app:cardBackgroundColor="@color/rosi"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/text_product3"
                android:textColor="@color/black"
                android:textSize="90sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="145dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="9dp"
                android:paddingTop="9dp"
                android:text="@string/text_description3"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="170dp"
                android:src="@drawable/favorito2" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/favorite" />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_gravity="end"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/cupc_1" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="1100dp"
                android:text="@string/text_price1"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="251dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:layout_marginTop="1200dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/rosa"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rest"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="9dp"
                    android:onClick="subtract1"
                    android:background="@drawable/boton"
                    android:padding="1dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:backgroundTint="@color/black" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="19dp"
                    android:background="@color/rosa"
                    android:onClick="buttonBuy"
                    android:padding="2dp"
                    android:src="@drawable/icon_pastel" />


                <Button

                    android:id="@+id/btn_sum"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/black"
                    android:onClick="add1"
                    android:padding="1dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="35dp" />


            </LinearLayout>


            <Button
                android:id="@+id/btn_buy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="6dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/white"
                android:onClick="buttonBuy"
                android:text="@string/text_buy"
                android:textSize="35dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

</ScrollView>


