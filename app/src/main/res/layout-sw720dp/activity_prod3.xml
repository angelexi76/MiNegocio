<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prod3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degraded1"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_barra"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/black"
            android:elevation="3dp"
            android:background="@drawable/degraded_2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/text_1"
            app:backgroundTint="@null" />




        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/rosi"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow"
            app:backgroundTint="@null">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_product3"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="90sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginTop="145dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="9dp"
                android:paddingTop="9dp"
                android:text="@string/text_description3"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="170dp"
                android:src="@drawable/cupc3" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/cupc2" />


            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="end"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/cupc_1" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="1200dp"
                android:text="@string/text_price1"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="1300dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/white"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="23dp"
                    android:background="@drawable/boton"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:onClick="sum3"
                    android:padding="1dp"
                    android:text="+"
                    android:textSize="35dp" />


                <TextView

                    android:id="@+id/textView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="0"
                    android:padding="1dp"
                    android:gravity="center"
                    android:onClick="text3"
                    android:background="@drawable/boton"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/boton"
                    android:backgroundTint="@color/black"
                    android:padding="1dp"
                    android:onClick="rest3"
                    android:textColor="@color/white"
                    android:text="-"
                    android:textSize="35dp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnBuy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/boton"
                android:backgroundTint="@color/white"
                android:onClick="buttonBuy"
                android:text="@string/text_buy"
                android:textSize="45dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


